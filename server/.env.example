# Local Environment Variables
# Copy this file to .env and fill in your actual values

# Development Database (SQLite - no setup required)
ENVIRONMENT=development
DATABASE_URL=sqlite:///./sprintsync.db

# For Cloud SQL development (optional)
# ENVIRONMENT=development
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id
# CLOUD_SQL_REGION=us-central1
# CLOUD_SQL_INSTANCE=sprintsync-db
# CLOUD_SQL_DATABASE=sprintsync
# CLOUD_SQL_USERNAME=sprintsync_user
# CLOUD_SQL_PASSWORD=your-password
# CLOUD_SQL_PUBLIC_IP=your-cloud-sql-public-ip

# JWT Configuration
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256

# AI Integration (optional)
# OPENAI_API_KEY=your-openai-api-key

# Logging
LOG_LEVEL=INFO