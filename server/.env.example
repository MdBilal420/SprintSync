# SprintSync Environment Configuration Example
# Copy this file to .env and configure for your environment

# Environment
ENVIRONMENT=development  # development or production
DEBUG=true

# Database
# For development (SQLite): sqlite:///./sprintsync.db
# For production (PostgreSQL): postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///./sprintsync.db

# Cloud SQL (for production only)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
CLOUD_SQL_INSTANCE=your-cloud-sql-instance-name
CLOUD_SQL_REGION=us-central1
CLOUD_SQL_DATABASE=your-database-name
CLOUD_SQL_USERNAME=your-database-username
CLOUD_SQL_PASSWORD=your-database-password

# JWT Settings
SECRET_KEY=change-this-to-a-secure-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Settings
OPENAI_API_KEY=your-openai-api-key

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Logging
LOG_LEVEL=INFO